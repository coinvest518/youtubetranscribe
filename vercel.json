{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",          
      "use": "@vercel/python"
    },
    {
      "src": "frontend/build/**/*",  
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",             
      "dest": "/api/index.py"         
    },
    {
      "src": "/(.*)",                  
      "dest": "/frontend/build/$1"     
    }
  ],
  "env": {
    "ASSEMBLY_AI_API_KEY": "@assembly_ai_api_key" 
  }
}
